extends layout.pug
block head
  link(rel="stylesheet" href="/styles/timeline.css")
  //- link(rel="stylesheet" href="/styles/login.css")
  title pacridon
block content
  #timeline.row
    .col-md-6.col-md-offset-3
      form(v-on:submit="postToot")
        .form-group
          textarea.form-control(v-model="newToot.body" placeholder="今何してる？" required)
        .form-group
          input.btn.btn-primary.btn-lg(type="submit" value="toot!")
        p
      #toots
          .media.panel.panel-default.panel-body(v-for="toot in toots")
            .media-body 
              .pull-right
                button.btn.btn-danger.btn-xs(v-on:click="deleteToot($event,toot.id)")
                  i.glyphicon.glyphicon-trash
              | {{toot.body}}
              